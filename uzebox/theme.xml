<theme>
  <formatVersion>7</formatVersion>
  <include>./../theme.xml</include>
  <variables>
    <systemBackgroundColor>5E6064</systemBackgroundColor>
  </variables>

  <view name="basic, detailed, video, grid">
    <text name="nameLabel" extra="true">
      <text>UZEBOX</text>
    </text>
  </view>

  <view name="system">
    <text name="sys_line1" extra="true">
      <text>UZEBOX</text>

    </text>
    <text name="shortdescription" extra="true">
      <text>2007 | 8-bit Console</text>
    </text>
